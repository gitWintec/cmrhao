
@model cmrhao.Models.Announcement
@{
    Layout = null;
}



@using (Html.BeginForm("AddOrEditAnsmnt", "Admin", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.AId)
    @Html.HiddenFor(model => model.ADate)
    <div class="form-group">
        @Html.LabelFor(model => model.Announcement1, new { @class = "control-label" })
        @Html.TextAreaFor(model => model.Announcement1, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Announcement1)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.aOrder, new { @class = "control-label" })
        @Html.EditorFor(model => model.aOrder, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.aOrder)
    </div>


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}